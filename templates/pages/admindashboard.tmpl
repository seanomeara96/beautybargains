{{ define "admindashboard" }}
    {{ template "header" . }}

        <!-- Events Table -->
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
            <table class="min-w-full bg-white">
                <thead class="bg-gray-800 text-white">
                    <tr>
                        <th class="w-1/4 px-6 py-3 text-left">Event</th>
                        <th class="w-1/2 px-6 py-3 text-left">Description</th>
                        <th class="w-1/8 px-6 py-3 text-left">Extra Images</th>
                        <th class="w-1/8 px-6 py-3 text-center">Actions</th>
                    </tr>
                </thead>
                <tbody id="event-table" class="">
                    {{range .Events}}
                        <tr class="">
                            <td class="px-6 py-4">
                                <div class="flex items-center">
                                    <img src="{{.Profile.Photo}}" alt="Profile Photo" class="w-10 h-10 rounded-full mr-4">
                                    <div>
                                        <p class="font-bold">{{.Profile.Username}}</p>
                                        <p>{{.Content.Summary}}</p>
                                        <p class="text-sm text-gray-500">{{.Content.TimeElapsed}}</p>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <p>{{.Content.ExtraText}}</p>
                            </td>
                            <td class="px-6 py-4">
                                {{if .Content.ExtraImages}}
                                    <div class="flex space-x-2">
                                        {{range .Content.ExtraImages}}
                                            <img src="{{.Src}}" alt="{{.Alt}}" class="w-32 h-32 object-cover object-center rounded-md">
                                        {{end}}
                                    </div>
                                {{else}}
                                    <p class="text-gray-500">No extra images</p>
                                {{end}}
                            </td>
                            <td class="px-6 py-4 text-center">
                                <button class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700"
                                        hx-get="/admin/events/edit/{{.ID}}"
                                        hx-target="#event-modal"
                                        hx-trigger="click">
                                    Edit
                                </button>
                                <button class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-700"
                                        hx-delete="/admin/events/delete/{{.ID}}"
                                        hx-confirm="Are you sure you want to delete this event?"
                                        hx-target="#event-table"
                                        hx-swap="outerHTML">
                                    Delete
                                </button>
                            </td>
                        </tr>
                    {{end}}
                </tbody>
            </table>
        </div>

        <!-- Modal for Editing Events -->
        <div id="event-modal" class="fixed inset-0 bg-gray-600 bg-opacity-50 flex items-center justify-center hidden">
            <div class="bg-white p-6 rounded-lg shadow-lg w-1/3">
                <!-- This content will be replaced by HTMX -->
            </div>
        </div>

        <script>
            // Script to close the modal when clicking outside of it
            document.addEventListener('click', function(event) {
                            var modal = document.getElementById('event-modal');
                            if (event.target === modal) {
                                            modal.classList.add('hidden');
                                        }
                        });
        </script>
    {{ template "footer" . }}
{{ end }}
