{{ define "feedpage" }}
{{ template "header" . }}

<div
  class="w-full bg-gradient-to-r from-purple-400 via-pink-500 to-red-500 p-8 rounded-lg flex justify-center items-center relative shadow-lg"
>
  <div class="flex flex-col gap-6 text-center">
    <div>
      <h3 class="text-3xl font-extrabold text-white">
        Stay Updated in Just 5 Minutes a Day
      </h3>
      <p class="text-white max-w-2xl mx-auto">
        Join our beauty tribe and be the first to discover the hottest deals and
        beauty secrets from top brands in Ireland. Subscribe now and never miss
        out on fabulous offers!
      </p>
    </div>
    <form class="flex gap-2 justify-center">
      <input
        type="email"
        placeholder="Email"
        name="email"
        required
        class="p-3 border border-gray-300 rounded-md flex-1 shadow-sm"
      />
      <button
        type="submit"
        class="bg-yellow-500 text-white px-6 py-3 rounded-md shadow-md hover:bg-yellow-600 transition duration-300"
      >
        Subscribe
      </button>
    </form>
  </div>
</div>

<section class="py-8">
  <div class="container mx-auto max-w-7xl">
    <!-- main feed area -->
    <main id="feed" class="flex flex-wrap">
      {{ range.Events }}
      <div
        class="lg:w-1/2 mx-auto mb-6 rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-300 shrink-0"
      >
        {{ template "event" . }}
      </div>
      {{ end }}
    </main>

    <!-- websites and hash tags -->
    
      <div id="websites">
        <h2 id="stores" class="text-lg font-semibold text-gray-800 mb-4">
          Stores
        </h2>
        <p class="mb-6">We currently have our eyes on these stores and are adding more soon</p>
        <ul class="space-y-2 flex items-stretch gap-6">
          {{
            range.Websites
          }}
          <li class="p-6 rounded-lg shadow-md">
            
            <a
              href="/store/{{ lower .WebsiteName }}/"
              class="text-gray-800 hover:text-yellow-500 transition duration-300"
              ><strong>{{ .WebsiteName }}</strong></a
            >
            <img loading="lazy" src="/website_screenshots/{{.Screenshot}}" alt="">
          </li>
          {{
            end
          }}
        </ul>
      </div>

      <div id="trending" class="p-6 rounded-lg shadow-md">
        <p class="text-lg font-semibold text-gray-800 mb-4">
          <strong>Trending</strong>
        </p>
        <ul class="space-y-4">
          {{
            range.Trending
          }}
          <li class="my-4">
            <div class="text-xs text-gray-600">{{ .Category }} - Trending</div>
            <div class="text-xl my-1">
              <a
                class="text-yellow-500 hover:underline"
                href="/?hashtag={{ .Phrase }}"
                >#{{ .Phrase }}</a
              >
            </div>
            <div class="text-xs text-gray-600">{{ .PostCount }} posts</div>
          </li>
          {{
            end
          }}
        </ul>
      </div>

  </div>
</section>

{{ template "footer" . }}
{{ end }}


