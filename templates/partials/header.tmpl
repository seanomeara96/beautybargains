{{define "header"}}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BeautyBargains.ie</title>
    <link rel="stylesheet" href="/assets/output.css" />
    {{ if eq .Env "dev" }}
    <script src="https://cdn.tailwindcss.com"></script>
    {{
      end
    }}
    <style>
      html,
      body {
        min-height: 100%;
        scroll-behavior: smooth;
    }
    </style>
  </head>
  <body>
    <nav class="bg-white shadow-md">
      <div class="container mx-auto p-4 flex flex-wrap justify-between items-center">
        <a href="/" class="text-2xl font-bold text-gray-800">BeautyBargains.ie</a>
        <ul class="flex gap-6">
          <li><a href="/#stores" class="text-gray-600 hover:text-yellow-500 transition duration-300">Stores</a></li>
         <!--<li><a href="/brands" class="text-gray-600 hover:text-yellow-500 transition duration-300">Brands</a></li>-->
          <li class="relative group">
            <a href="/categories" class="text-gray-600 hover:text-yellow-500 transition duration-300">Categories</a>
            <ul class="absolute hidden group-hover:block group-hover:group-hover:block bg-white shadow-md mt-2" style="z-index: 1000;">
              {{ range .Categories }}
              <li><a href="/categories/{{ .Name }}" class="block px-4 py-2 text-gray-600 hover:text-yellow-500 transition duration-300">{{ .Name }}</a></li>
              {{ end }}
            </ul>
          </li>
          
          <li><a href="/subscribe" class="text-gray-600 hover:text-yellow-500 transition duration-300">Newsletter</a></li>
        </ul>
      </div>
    </nav>
    {{ end }}

